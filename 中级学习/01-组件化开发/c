<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
<div id="app">
    <!--    使用-->
    <label> 第一个组件实例</label>
    <demo-cpt @item-click="getSubInfo"></demo-cpt>
    <label>从子组件获取的值</label>
    <h2> {{ subInfo}}</h2>

</div>
<script src="../js/vue.js"></script>

<template id="demoCpt">
    <div>
        <button v-for="item in categories" @click="bntClick(item)"> {{item.name }}</button>
    </div>
</template>


<script>

    const demoCpt = {
        template: "#demoCpt",
        props: {
            "title": {
                type: String,
                default: "default title"
            }
        },
        data() {

            return {
                categories: [
                    {id: "123", "name": "热门推荐"},
                    {id: "124", "name": "手机数码"},
                    {id: "125", "name": "电脑办公"},
                    {id: "126", "name": "家用家电"},
                ]
            }
        },
        methods: {
            bntClick(item) {
                console.log(item)
                this.$emit("item-click", item)
            }
        }

    }
    let app = new Vue({
        el: "#app",
        data: {
            subInfo: {}
        },
        components: {
            "demo-cpt": demoCpt
        },
        methods: {
            getSubInfo(item) {
                this.subInfo = item.name
                console.log(item)
            }

        },


    })
</script>
</body>
</html>